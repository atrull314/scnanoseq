        process {
            withName: '.*:SPLIT_FILE' {
                publishDir = [
                    enabled: false
                ]
            }
        }


        process {
            withName: '.*:CAT_CAT' {
                publishDir = [
                    enabled: false
                ]
            }
        }
    }

    // NANOFILT
    if ( !params.skip_trimming ){
        process {
            withName:'.*:NANOFILT' {
                ext.args = {
                    [
                        params.min_length ? "--length ${params.min_length}" : "",
                        params.min_q_score ? "--quality ${params.min_q_score}" : ""
                    ].join(' ').trim()
                }
                publishDir = [
                    enabled: false
                ]
            }
        }
    }
}

// PREEXTRACT_FASTQ
